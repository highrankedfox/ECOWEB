{% extends 'base.html.twig' %}
{% block content %}
    {% block homepage %}
        <!-- Mashead header-->
        <header class="masthead">
            <div class="container px-5">
                <div class="row gx-5 align-items-center">
                    <div class="col-lg-6">
                        <!-- Mashead text and app badges-->
                        <div class="mb-5 mb-lg-0 text-center text-lg-start">
                            <h1 class="display-1 lh-1 mb-3">Bienvenue dans une nouvelle ère informatique.</h1>
                            <p class="lead fw-normal text-muted mb-5">Faites vos premiers pas vers un développement éco-responsable avec nos formations !</p>
                            <div class="d-flex flex-column flex-lg-row align-items-center">
                                <a class="small btn btn-success custom-btn rounded-pill px-3 mb-2 mb-lg-0" href="{{path('app_formations')}}" role="button">C'est parti !</a>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-6">
                        <div class="masthead-device-mockup">
                            <img src="{{ asset('assets/img/leaves1.png') }}" alt="Feuilles de bananier" height="600px">
                        </div>
                    </div>
                </div>
            </div>
        </header>
        <!-- Quote/testimonial aside-->
        <aside class="text-center bandeau">
            <div class="container px-3">
                <div class="row gx-5 justify-content-center">
                    <div class="col-xl-8">
                        <div class="h2 fs-1 text-white mb-2">"Un point de départ vers un web plus éco-conscient et responsable !"</div>
                    </div>
                </div>
            </div>
        </aside>
        <!-- App features section-->
        <section id="features">
            <div class="container px-5">
                <div class="row gx-5 align-items-center">
                    <div class="col-lg-8 order-lg-1 mb-5 mb-lg-0">
                        <div class="container-fluid px-5">
                            <div class="row gx-5">
                                <div class="col-md-6 mb-5">
                                    <!-- Feature item-->
                                    <div class="text-center">
                                        <i class="bi-patch-check icon-feature d-block mb-3"></i>
                                        <h3 class="font-alt">Certification GreenWeb</h3>
                                        <p class="text-muted mb-0">Un titre certifié pour les développeurs soucieux de son environnement</p>
                                    </div>
                                </div>
                                <div class="col-md-6 mb-5">
                                    <!-- Feature item-->
                                    <div class="text-center">
                                        <i class="bi-person-check-fill icon-feature d-block mb-3"></i>
                                        <h3 class="font-alt">Instructeurs renommés</h3>
                                        <p class="text-muted mb-0">Nous sélectionnons la crème des formateurs pour nos cours</p>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6 mb-5 mb-md-0">
                                    <!-- Feature item-->
                                    <div class="text-center">
                                        <i class="bi-piggy-bank icon-feature d-block mb-3"></i>
                                        <h3 class="font-alt">Gratuit pour tous</h3>
                                        <p class="text-muted mb-0">Seule l'inscription est requise pour commencer à se former</p>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <!-- Feature item-->
                                    <div class="text-center">
                                        <i class="bi-pencil icon-feature d-block mb-3"></i>
                                        <h3 class="font-alt">Méthodes efficaces</h3>
                                        <p class="text-muted mb-0">Nos cours préparent à la certification avec 100% de réussite</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-4 order-lg-0">
                        <!-- Features section device mockup-->
                        <div class="features-device-mockup">
                            <img src="{{ asset('assets/img/leaves2.png') }}" alt="Feuilles de bananier" height="600px">
                        </div>
                    </div>
                </div>
            </div>
        </section>
        <!-- Call to action section-->
        <section class="cta">
            <div class="cta-content">
                <div class="container px-5">
                    <h2 class="text-white display-1 lh-1 mb-4">
                        Des connaissances à partager ?
                        <br />
                        N'attendez plus !
                    </h2>
                    <a class="btn btn-outline-light py-3 px-4 rounded-pill" href="{{ path('app_apply') }}">Devenir instructeur</a>
                </div>
            </div>
        </section>
        <!-- Last posted section-->
        <section class="latest">
            <div class="container px-5">
                <h2 class="text-black text-center display-1 mt-2">Dernières formations</h2>
                <div class="row">
                    {% for formation in formations %}
                        <div class="col-md-4">
                            <div class="card">
                                <img class="card-img-top" src="{{ vich_uploader_asset(formation, 'imageFile') }}" alt="{{ formation.imageName }}">
                                <div class="card-body">
                                    <h5 class="card-title">{{ formation.title }}</h5>
                                    <p class="card-text">{{ formation.description }}</p>
                                    <a class="small btn btn-success custom-btn rounded-pill px-3" href="{{path('app_formations_see', {'id' : formation.id })}}" role="button">voir</a>
                                    <span class="small">par {{ formation.user.firstname }} {{ formation.user.lastname }}</span>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            </div>
        </section>
    {% endblock %}
{% endblock %}